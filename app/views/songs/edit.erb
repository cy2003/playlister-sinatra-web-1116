<h2>Edit <%=@song.name%></h2>

<form action="/songs/<%=@song.slug%>"  method="POST">
  <input type="hidden" name="_method" value="PATCH"/>

  <label for="name">Name</label>
  <input type="text" name="song[name]" id="name" value="<%=@song.name%>">

  <label for="artist_name">Artist Name</label>
  <input type="text" name="artist[name]" id="artist_name" value="<%=@song.artist.name%>">

  <ul>
    <% Genre.all.each do |genre| %>
      <li>
        <label><%=genre.name%></label>
        <input type="checkbox" name="song[genres_ids][]" id="<%=genre.name%>" value="<%=genre.id%>" <%='checked' if @song.genres.include?(genre) %>>
      </li>
      <%end%>
  </ul>
  <input type="submit" value="Save" />
</form>
